{
  "name": "skedlyze-server",
  "version": "1.0.0",
  "description": "Backend server for Skedlyze - a gamified lifestyle app with Google Calendar integration",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "cd ../web-client && npm install && npm run build",
    "postinstall": "npm run build",
    "migrate": "knex migrate:latest",
    "migrate:rollback": "knex migrate:rollback",
    "seed": "knex seed:run",
    "db:reset": "knex migrate:rollback --all && knex migrate:latest && knex seed:run",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "task-management",
    "gamification",
    "google-calendar",
    "productivity"
  ],
  "author": "Skedlyze Team",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "googleapis": "^144.0.0",
    "knex": "^3.1.0",
    "on-headers": "^1.1.0",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "nodemon": "^3.1.10"
  }
}
